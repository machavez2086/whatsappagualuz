
<!DOCTYPE html>
<html {% block html_attributes %}class="no-js"{% endblock %}>
    <head>
        {% block meta_tags %}
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta charset="UTF-8">
            <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
        {% endblock %}

        {% block stylesheets %}
            
            <link href="{{ asset('bundles/whatsapp/css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ asset('bundles/whatsapp/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
            <link href="{{ asset('bundles/whatsapp/css/toastr.min.css') }}" type="text/css" rel="stylesheet">
            {% block stylesheets_inline %}
                <link href="{{ asset('bundles/whatsapp/css/sb-admin.css') }}" rel="stylesheet">
            {% endblock %}
        {% endblock %}
        {% block javascript %}
            <script src="{{ asset('Highcharts-6.0.5/code/highcharts.js') }}"></script>
            <script src="{{ asset('Highcharts-6.0.5/code/highcharts-3d.js') }}"></script>
            <script src="{{ asset('Highcharts-6.0.5/code/modules/exporting.js') }}"></script>
            <script src="{{ asset('bundles/whatsapp/js/jquery3.3.1.min.js') }}"></script>
            <script src="{{ asset('bundles/whatsapp/js/toastr.min.js') }}" type="text/javascript"></script>
            <script type="text/javascript" src="{{ asset('bundles/whatsapp/js/jquery.totemticker.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/whatsapp/js/bootstrap.min.js') }}"></script>
            <script>
                jQuery(document).ready(function () {
                    $('.toastr-success').each(function () {
                        {#                alert();#}
                        toastr["success"]($(this).text())
                    });
                });
                jQuery(document).ready(function () {
                    $('.toastr-error').each(function () {
                        {#                alert();#}
                        toastr["error"]($(this).text())
                    });
                });
                $('.btn-expand-collapse').click(function(e) {
                    $('.navbar-primary').toggleClass('collapsed');
                });
                
                jQuery(document).ready(function () {
                    $('#dashboardconfigurationtype_configuration').change(function(){
                        $('#empresa-form-change').submit();
                    });
                });
            </script>
            {% block inlinejavascript %}{% endblock %}
        {% endblock %}

        <title>
        {% block report_title %}Whatsapp - {% endblock %}{% block child_title %}{% endblock %}
        </title>
    </head>    <body {% block body_attributes %}{% endblock %}>
        {% block navbar%}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top " id="mainNav">
                <button class="navbar-dark navbar-toggler" type="button" data-toggle="collapse" data-target="#navToggle" aria-controls="navToggle" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="navToggle" class="collapse navbar-collapse justify-content-md-center">
                 <ul class="navbar-nav mr-auto">
                     <li class="nav-item ">
                         <a href="{{ path('home') }}" class="nav-link">Home <span class="sr-only">(current)</span></a>
                     </li>
                     <li class="nav-item ">
                         <a href="{{ path('sonata_admin_dashboard') }}" class="nav-link">Administración <span class="sr-only">(current)</span></a>
                     </li>
                   <li class="dashboard nav-item {%if app.session.get("menu") == "dashboard"%} active {%endif%}">
                     <a href="{{ path('dashboard') }}" class="nav-link">Dashboard <span class="sr-only">(current)</span></a>
                   </li>
                   <li class="dashboard nav-item {%if app.session.get("menu") == "report_peticion"%} active {%endif%}">
                     <a href="{{ path('report_peticion') }}" class="nav-link">Resumen <span class="sr-only">(current)</span></a>
                   </li>

                     {% block config %}{% endblock %}
                     <li class="reporte nav-item {%if app.session.get("menu") == "report_by_date_range"%} active {%endif%}">
                     <a href="{{ path('report_by_date_range') }}" class="nav-link">Reportes por fechas <span class="sr-only">(current)</span></a>
                   </li>
                     <li class="termino-menu nav-item {%if app.session.get("menu") == "terms"%} active {%endif%}">
                         <a href="{{ path('terms') }}" class="nav-link">Términos <span class="sr-only"></span></a>
                     </li>


                 </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form id="empresa-form-change" class="form-inline my-2 my-lg-0" role="form" action="{{path('dashboard')}}" {{form_enctype(form)}}
                                    method="POST" novalidate="novalidate">
                                {% if form.vars.errors|length > 0 %}
                                    <div class="sonata-ba-form-error">
                                        {{ form_errors(form) }}
                                    </div>
                                {% endif %}
                                {% for flashMessage in app.session.flashbag.get('error') %}
                                    <div class="alert alert-warning">
                                        {{ flashMessage | trans({}, 'RegistroentradaBundle')}}
                                    </div>
                                {% endfor %}
                                {{ form_errors(form.configuration)}}
                                <div class="col-md-3">{{form_label(form.configuration)}}</div>
                                <div class="col-md-7">{{form_widget(form.configuration)}}</div>
                                {{ form_rest(form) }}
                            </form>
                        </li>
                        {% if app.user%}
                            <li class="nav-item nav-link">
                                {{app.user.username}}
                            </li>
                        {% endif %}
                        {% if not app.user%}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('fos_user_security_login') }}" title="Autenticación"><i class="fa fa-user"></i></a>
                            </li>
                        {% else %}
                            <li class="nav-item dropdown">
                                <i href="#pablo" class="fa fa-user-circle nav-link dropdown-toggle text-white" id="navbarDropdown"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{path('sonata_admin_dashboard')}}">Administración</a>
                                    <a class="dropdown-item" href="{{path('dashboard')}}">Dashboard</a>
                                    <a class="dropdown-item" href="{{ path('fos_user_profile_edit') }}">Editar perfil</a>
                                    <a class="dropdown-item" href="{{ path('sonata_user_change_password') }}">Cambiar contraseña</a>
                                    <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">Salir</a>
                                </div>
                            </li>
                        {% endif %}
                    </ul>
               </div>
           </nav>
        {% endblock %}
        {% block content%}{% endblock %}  
        {% block footer%}
            <footer class="sticky-footer">
                <div class="container">
                    <div class="text-center">
                        <small>Copyright ©2019.</small>
                        <small>Todos los derechos reservados</small>
                    </div>
                </div>
            </footer>    
            {% block flashbag %}
            {% if app.session.flashbag.peekAll|length > 0 %}
                {% for type, messages in app.session.flashbag.all %}
                    {% for message in messages %}
                        <div class="{{ type ? type : '' }} {% if type == "sonata_flash_success" %}toastr-success {%else%}toastr-error {%endif%}hidden">
                            {% if type == "fos_user_success" %}
                                {{ message|trans({}, 'FOSUserBundle') }}
                            {% else %}
                                {{ message|trans({}, domain|default('messages')) }}
                            {% endif %}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
        {% endblock %}
        {% endblock %}  

    </body>
</html>
