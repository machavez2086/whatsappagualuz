{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box">
                <div class="box-header">
                    <h3 class="box-title">{{ settings.title }}</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-3">
                            <b>Total de empresas:</b> {{total}}
                        </div>
                        <div class="col-md-3">
                            <b>Cantidad total de peticiones:</b> {{totaltickets}}
                        </div>
                        <div class="col-md-3">
                            <b>Cantidad total de mensajes:</b> {{totalmessages}}
                        </div>
                        <div class="col-md-3">
                            <b>Cantidad total de alertas:</b> {{totalalerts}}
                        </div>
                    </div>
                    
                    
                    
                    
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <td class="sonata-ba-list-label" width="40%">
                                    Empresas
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{path("my_companies",{ action:"create"})}}" class="btn btn-link btn-flat">
                                            <i aria-hidden="true" class="fa fa-plus-circle"></i>
                                            Agregar nuevo
                                        </a>
                                        <a href="{{path("my_companies",{ action:"list"})}}" class="btn btn-link btn-flat">
                                            <i aria-hidden="true" class="fa fa-list"></i>
                                            Listar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
    
{% endblock %}